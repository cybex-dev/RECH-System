# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home
GET     /                               controllers.HomeController.index
GET     /about                          controllers.HomeController.about
GET     /help_support                   controllers.HomeController.helpSupport
GET     /jsRoutes                       controllers.HomeController.javascriptRoutes

### ### Application System ###

GET     /user/register                  controllers.UserSystem.RegistrationController.registerInitial
POST    /user/register/submit           controllers.UserSystem.RegistrationController.doRegisterInitial
GET     /user/verify/:token             controllers.UserSystem.RegistrationController.verify(token: String)
GET     /user/register/step2            controllers.UserSystem.RegistrationController.registerFinal
POST    /user/register/step2/submit     controllers.UserSystem.RegistrationController.submitRegistration

GET     /user/login                     controllers.UserSystem.LoginController.login
POST    /user/login                     controllers.UserSystem.LoginController.doLogin
GET     /user/logout                    controllers.UserSystem.LoginController.logout
GET     /user/forgetPassword            controllers.UserSystem.LoginController.forgotPassword
POST    /user/forgetPassword            controllers.UserSystem.ProfileHandler.sendForgotPassword

GET     /user/overview                  controllers.UserSystem.ProfileHandler.overview

GET     /user/changePassword/:token     controllers.UserSystem.ProfileHandler.changePassword(token: String)
POST    /user/changePassword            controllers.UserSystem.ProfileHandler.doChangePassword

GET     /user/profile                   controllers.UserSystem.ProfileHandler.settings
GET     /user/jsRoutes                  controllers.UserSystem.ProfileHandler.javascriptRoutes

### ### Application System ###

# View all applications & statuses
GET     /user/applications              controllers.ApplicationSystem.ApplicationHandler.allApplications

# New Application (application type passed as parameter)
GET     /application/new/:type          controllers.ApplicationSystem.ApplicationHandler.newApplication(type: String)
POST    /application/new/create         controllers.ApplicationSystem.ApplicationHandler.createApplication
POST    /application/new/submit         controllers.ApplicationSystem.ApplicationHandler.forceSubmitApplication

GET     /application/edit/:id           controllers.ApplicationSystem.ApplicationHandler.editApplication(id: String)
POST    /application/edit/submit        controllers.ApplicationSystem.ApplicationHandler.submitEdit

GET     /application/review/:id         controllers.ApplicationSystem.ApplicationHandler.reviewApplication(id: String)
POST    /application/review/submit      controllers.ApplicationSystem.ApplicationHandler.submitRevision
GET     /application/jsRoutes           controllers.ApplicationSystem.ApplicationHandler.javascriptRoutes

### ### Review System ###

GET     /rcd/applications/assign/:id    controllers.ReviewSystem.ReviewHandler.assignReviewer(id: String)
POST    /rcd/applications/assign        controllers.ReviewSystem.ReviewHandler.doAssignReviewers

GET     /review/application/:id         controllers.ReviewSystem.ReviewHandler.reviewApplication(id: String)
POST    /review/application/submit      controllers.ReviewSystem.ReviewHandler.submitReview

GET     /review/application/approve/:id controllers.ReviewSystem.ReviewHandler.viewApprove(id: String)
POST    /review/application/doApprove   controllers.ReviewSystem.ReviewHandler.doViewApprove

### ### Message System ###

GET     /messages                       controllers.MessageSystem.MessageController.allMessages
# Application ID passed as parameter
GET     /messages/:appId                controllers.MessageSystem.MessageController.applicationMessages(appId: Integer)

### ### Meeting System ###

GET     /rcd/meeting/applications           controllers.MeetingSystem.MeetingController.allApplications

GET     /rcd/meeting/application/:appId     controllers.MeetingSystem.MeetingController.getApplication(appId: Integer)
POST    /rcd/meeting/application/submit     controllers.MeetingSystem.MeetingController.submitResolution


### ### API Controller ###
GET     /api/jsRoutes                   controllers.APIController.javascriptRoutes

GET     /api/getData                    controllers.APIController.getData
GET     /api/searchPerson/:email        controllers.APIController.searchPerson(email: String)
GET     /api/searchLocation             controllers.APIController.searchLocation
GET     /api/allReviewers/:id           controllers.APIController.findAllReviewers(id: String)

POST    /api/updateBasicInfo            controllers.UserSystem.ProfileHandler.updatePassword
POST    /api/updateAcademicInfo         controllers.UserSystem.ProfileHandler.updateAcademicInfo
POST    /api/changePassword             controllers.UserSystem.ProfileHandler.updateBasicInfo
POST    /api/doEnrol                    controllers.UserSystem.ProfileHandler.doEnrol


# An example controller showing how to use dependency injection
# GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
# GET     /message                    controllers.AsyncController.message

# Redirect to NMU via Logo click
GET     /:link                          controllers.HomeController.redirectMandela(link: String)
GET     /secure/:link                   controllers.HomeController.redirectMandelaSecure(link: String)

# Redirects for NMU search
POST    /secure                         controllers.HomeController.postNMUSearch



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)


